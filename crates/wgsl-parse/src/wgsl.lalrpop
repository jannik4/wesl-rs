// ----------- below: macros -----------

Comma<T>: Vec<T> = {
    <mut v: (<T> ",")*> <e: T?> => match e {
        Some(e) => {
            v.push(e);
            v
        }
        None => v,
    }
};

Spanned<T>: Spanned<T> = <@L> <T> <@R> => {
    let (l, t, r) = (<>);
    let span = (l..r).into();
    Spanned::new(t, span)
};

WithSpan<T>: (T, Span) = <@L> <T> <@R> => {
    let (l, t, r) = (<>);
    let span = (l..r).into();
    (t, span)
};

Comma1<T> = Sep1<",", T>;

Sep1<S, T>: Vec<T> = {
    <mut v: (<T> S)*> <e: T> S? => {
        v.push(e);
        v
    }
};
